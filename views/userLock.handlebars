{{#if user}}

    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <form class="login-form" method="post" action="/users/re-logged">

                <div class="row">
                    <div class="input-field col s12 center">
                        <img src="http://res.cloudinary.com/alrod909/image/upload/v1511736761/divvy/avatar-7_txkm6i.png" alt=""
                             class="circle responsive-img valign profile-image-login cyan">
                        <h4 class="header">{{user.fullname}}</h4>
                    </div>
                </div>

                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix pt-5">lock_outline</i>
                        <input id="password" type="password" name="password">
                        <label for="password">Password</label>
                    </div>
                </div>

                <input id="id" type="hidden" name="id" value="{{user._id}}">

                <div class="row">
                    <div class="input-field col s12">
                        <a type="submit" id="loginButton" class="btn waves-effect waves-light col s12">Login</a>
                    </div>
                </div>



            </form>
        </div>
    </div>

{{/if}}
