            <!--Left Side Nav-->
            <ul id="slide-out" class="side-nav fixed leftside-navigation">

                <!--User Icon and Info-->
                <li class="user-details">
                    <div class="row">

                        <!--Profile Image-->
                        <div class="col col s4 m4 l4">
                            <img src="http://res.cloudinary.com/alrod909/image/upload/v1511736761/divvy/avatar-7_txkm6i.png" alt=""
                                 class="circle responsive-img valign profile-image gradient-45deg-purple-pink">
                        </div>

                        <!--Profile Info-->
                        <div class="col col s8 m8 l8">
                            <a class="white-text profile-btn">{{user.fullname}}</a>
                            <p class="user-roal">Phone : {{user.phone}}</p>
                            <p class="user-roal">Car : {{user.vehicle}}</p>
                            <p class="user-roal"># of Seats : {{user.seats}}</p>
                        </div>

                    </div>
                </li>

                <!--Links and Items in left side nav-->
                <li class="no-padding">
                    <ul class="collapsible" data-collapsible="accordion">

                        <!--Users Item-->
                        <li class="bold">
                            <a class="collapsible-header  waves-effect waves-cyan active">
                                <i class="material-icons">account_circle</i>
                                <span class="nav-text">Users</span>
                            </a>

                            <!--Collapsible Body of users-->
                            <div class="collapsible-body">
                                <ul>

                                    <li class="user-details" id="user-1">
                                        <div class="row">

                                            <div class="col col s4 m4 l4">
                                                <img src="http://res.cloudinary.com/alrod909/image/upload/v1511736760/divvy/avatar-2_wk8hpd.png" alt=""
                                                     class="circle responsive-img valign profile-image gradient-45deg-cyan-light-green">
                                            </div>

                                            <div class="col col s8 m8 l8">
                                                <a class="white-text profile-btn">Lil Pump</a>
                                                <p class="user-roal">Phone : 801-554-8917</p>
                                                <p class="user-roal">Car : Honda Civic</p>
                                                <p class="user-roal"># of Seats : 4</p>
                                            </div>

                                        </div>

                                    </li>

                                    <li class="user-details" id="user-2">
                                        <div class="row">

                                            <div class="col col s4 m4 l4">
                                                <img src="http://res.cloudinary.com/alrod909/image/upload/v1511736760/divvy/avatar-3_djmsuu.png" alt=""
                                                     class="circle responsive-img valign profile-image gradient-45deg-deep-orange-orange">
                                            </div>

                                            <div class="col col s8 m8 l8">
                                                <a class="white-text profile-btn">Chester Trix</a>
                                                <p class="user-roal">Phone : 801-854-0200</p>
                                                <p class="user-roal">Car : Range Rover</p>
                                                <p class="user-roal"># of Seats : 4</p>
                                            </div>

                                        </div>
                                    </li>

                                </ul>
                            </div>
                        </li>
                    </ul>
