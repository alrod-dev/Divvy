            </a>

        </aside>
        <!-- END LEFT SIDEBAR NAV-->

        <!-- START CONTENT -->
        <section id="content">

            <!--start container-->
            <div class="container">
                <div id="profile-page" class="section">
                    <!-- profile-page-header -->
                    <div id="profile-page-header" class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="http://res.cloudinary.com/alrod909/image/upload/v1511736765/divvy/33_qvnvs9.png" alt="user background">
                        </div>
                        <figure class="card-profile-image">
                            <img src="http://res.cloudinary.com/alrod909/image/upload/v1511736761/divvy/avatar-7_txkm6i.png" alt="profile image"
                                 class="circle z-depth-2 responsive-img activator gradient-45deg-purple-pink gradient-shadow">
                        </figure>

                        {{#if user}}

                            <div class="card-content">
                                <div class="row pt-2">
                                    <div class="col s12 m3 offset-m2">
                                        <h4 class="card-title grey-text text-darken-4">{{user.fullname}}</h4>
                                        <p class="medium-small grey-text">Profile Name</p>
                                    </div>
                                    <div class="col s12 m2 center-align">
                                        <h4 class="card-title grey-text text-darken-4">{{user.vehicle}}</h4>
                                        <p class="medium-small grey-text">Car</p>
                                    </div>
                                    <div class="col s12 m2 center-align">
                                        <h4 class="card-title grey-text text-darken-4">{{user.seats}}</h4>
                                        <p class="medium-small grey-text"># of Seats</p>
                                    </div>
                                    <div class="col s12 m2 center-align">
                                        <h4 class="card-title grey-text text-darken-4">{{user.phone}}</h4>
                                        <p class="medium-small grey-text">Phone</p>
                                    </div>
                                    <div class="col s12 m1 right-align">
                                        <a class="btn-floating activator waves-effect waves-light rec accent-2 right">
                                            <i class="material-icons">perm_identity</i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        {{/if}}

                        <div class="card-reveal">

                             <span class="card-title grey-text text-darken-4">
                                 <i class="material-icons right">close</i>
                             </span>


                            <h4 class="header2">User Profile</h4>

                            <div class="row">

                                {{#if user}}

                                    <form class="col s12" method="post" action="/users/update">

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="name" name="name" type="text" class="validate" value="{{user.fullname}}">
                                                <label for="name">Name</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">settings_phone</i>
                                                <input id="phone" name="phone" type="text" class="validate" value="{{user.phone}}">
                                                <label for="phone">Phone</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">email</i>
                                                <input id="email" name="email" type="email" class="validate" value="{{user.email}}">
                                                <label for="email">Email</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">directions_car</i>
                                                <input id="vehicle" name="vehicle" type="text" class="validate" value="{{user.vehicle}}">
                                                <label for="vehicle">Car</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">event_seat</i>
                                                <input id="seats" name="seats" type="number" class="validate" value="{{user.seats}}">
                                                <label for="seats"># of Seats</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="material-icons prefix">location_on</i>
                                                <input id="address" name="address" type="text" class="validate" value="{{user.address}}">
                                                <label for="address">Address</label>
                                            </div>
                                        </div>

                                        <input id="_id" type="hidden" name="_id" value="{{user._id}}">

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <button class="btn gradient-45deg-purple-deep-purple right waves-effect waves-light right" type="submit"
                                                        name="action">Save
                                                    <i class="material-icons right">send</i>
                                                </button>
                                            </div>
                                        </div>

                                    </form>

                                {{/if}}

                            </div>

                        </div>
                    </div>
                    <!--/ profile-page-header -->
                    <!-- profile-page-content -->
                </div>
            </div>


        </section>
        <!-- END CONTENT -->

    </div>
    <!-- END WRAPPER -->
</div>
